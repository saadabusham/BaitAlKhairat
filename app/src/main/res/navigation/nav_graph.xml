<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:defaultNavHost="true"
    app:startDestination="@id/nav_home"
    tools:ignore="UnusedNavigation">


    <fragment
        android:id="@+id/nav_home"
        android:name="com.saad.baitalkhairat.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_categoryFragment"
            app:destination="@id/nav_category" />
    </fragment>
    <fragment
        android:id="@+id/nav_category"
        android:name="com.saad.baitalkhairat.ui.category.CategoryFragment"
        android:label="CategoryFragment">
        <action
            android:id="@+id/action_nav_category_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.saad.baitalkhairat.ui.subcategory.SubCategoryFragment"
        android:label="SubCategoryFragment" />
</navigation>